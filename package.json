{
  "name": "cloudformation-documentation-links",
  "displayName": "CloudFormation Documentation Links",
  "version": "0.0.3",
  "description": "Provides links to relevant cloudformation documentation directly in cloudformation templates",
  "categories": [
    "Education",
    "Other"
  ],
  "keywords": [
    "aws",
    "cfn",
    "cloudformation",
    "documentation",
    "iac",
    "links",
    "sam",
    "serverless-application-model",
    "stack",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dothomson/cloudformation-documentation-links.git"
  },
  "publisher": "dothomson",
  "main": "./dist/extension.js",
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "vscode-test",
    "vscode:prepublish": "npm run package",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "contributes": {},
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:json"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.42.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "engines": {
    "vscode": "^1.42.0"
  }
}
